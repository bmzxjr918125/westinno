.theme{
    width: 100%;
    height: 105px;
    background-color: #01af21;
}
.theme_content{
    width: 1120px;
    height: 105px;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    line-height: 105px;
}
.theme_name{
    float: left;
    width: 210px;
    height: 105px;
    position: relative;
    text-align: center;
}
.theme_name span{
    color: #ffcc00;
    font-size: 28px;
}
.theme_name .orange_font{
    color: #ffffff;
}
